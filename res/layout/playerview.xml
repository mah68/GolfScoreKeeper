<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/totalScoreTextView"
        android:layout_width="40sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/playerNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="#000000"
        android:textSize="35sp" />

    <TextView
        android:id="@+id/holeScoreTextView"
        android:layout_width="30sp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="40"
        android:textColor="#0000FF" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="0.10"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="6dip" >

        <Button
            android:id="@+id/scoreDownButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/score_down_button" />

        <Button
            android:id="@+id/scoreUpButton"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/scoreDownButton"
            android:background="@drawable/score_up_button" />
    </RelativeLayout>

</LinearLayout>